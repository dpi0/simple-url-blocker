{
  "manifest_version": 2,
  "name": "Simple URL Blocker",
  "version": "1.0",
  "description": "Blocks access to specified URLs",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "URL Blocker"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["blocked.html"],
  "icons": {
    "48": "icons/simple-url-blocker-48.png"
  }
}
